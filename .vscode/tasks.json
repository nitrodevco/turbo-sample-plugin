{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restore Solution",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build Solution (Debug)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}",
                "-c",
                "Debug",
                "--no-restore",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": [
                "Restore Solution"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Solution (Release)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}",
                "-c",
                "Release",
                "--no-restore",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": [
                "Restore Solution"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Dotnet: Format (Roslyn)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "format"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CSharpier: Format",
            "type": "shell",
            "command": "dotnet csharpier format .",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format: All (Roslyn + CSharpier)",
            "type": "shell",
            "dependsOn": [
                "Dotnet: Format (Roslyn)",
                "CSharpier: Format"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}